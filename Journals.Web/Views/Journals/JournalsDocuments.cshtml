@model IEnumerable<Journals.Web.Models.JournalsDocumentsDTO>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Journals Document</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <p>
                <a asp-action="UploadDocument">Upload New Document</a>
            </p>
            <table id="journalsDocument" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                <button type="button" onclick="loadView('@item.PDFBase64')" class="btn btn-primary">Load PDF <i class="far fa-file"></i></button>



                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/css/datatable.min.css" />
<link href="~/css/jquery-ui.css" rel="stylesheet" />
@section scripts {


    <script src="~/lib/JqueyV1.1/jquery-1.11.1.min.js"></script>
    <script src="~/lib/JqueyV1.1/jquery-ui.min.js"></script>
  
    <script src="~/lib/pdfView/pdf.min.js"></script>

    <script src="~/lib/pdfView/pdf.worker.js"></script>
    <script src="~/js/easyPDF.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>

}

<script>
    $(document).ready(function () {
        $('#journalsDocument').DataTable();


    });
    function loadView(doc) {
        easyPDF(doc, "jQueryScript.Net")
    }
</script>
